NAME		= PhoneBook
NPD			= --no-print-directory
OBJ_DIR		= obj/


# ----Libraryes----
INC_DIR = inc/
# =============

# -------------
RM = rm -rf
MP = mkdir -p
CC = clang++
CFLAGS = -Werror -Wextra -Wall -std=c++98 -O3 -g -fsanitize=address
# =============

FILES = main

SRC = $(addsuffix .cpp, $(FILES))

vpath %.cpp src

# -------------
OBJ = $(addprefix $(OBJ_DIR), $(SRC:.cpp=.o))
DEP = $(addsuffix .d, $(basename $(OBJ)))
# =============

$(OBJ_DIR)%.o: %.cpp
	@$(MP) $(dir $@)
	@$(CC) $(CFLAGS) -MMD -I $(INC_DIR) -c $< -o $@
#echo "Object of the file $(basename $<) has been created ðŸ¤"

all:
	@$(MAKE) $(NAME) $(NPD)

$(NAME):: $(OBJ)
	@$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
	@echo "Compiling $(NAME) ðŸ˜ˆ"

$(NAME)::
	@echo "Hello, $(NAME) already compiled ðŸ¦†"

-include $(DEP)

clean:
	@$(RM) $(OBJ_DIR)
	@echo "$(OBJ_DIR) has been removed ðŸ˜­"

fclean: clean
	@$(RM) $(NAME)
	@echo "$(NAME) has been destroyed ðŸ¥ºðŸ¥º"

re:
	@$(MAKE) fclean $(NPD)
	@$(MAKE) $(NPD)

.PHONY: all clean fclean re